<% if @user.errors.any? %>
  <div>
    <h2>The following errors prohibited this user from being created</h2>

    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><% message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(:registrations, url: sign_in_path) do |f| %>
	<div class="form-group">
	    <%= f.label :name, "Name" %>
	    <%= f.text_field :name %>
	</div>
	<div class="form-group">
	    <%= f.label :last_name, "Last Name" %>
	    <%= f.text_field :last_name %>
	</div>
	<div class="form-group">
	    <%= f.label :email %>
	    <%= f.text_field :email %>
	</div>
	<div class="form-group">
      <%= f.label :phone %>
      <%= f.text_field :phone %>
  	</div>
	<div class="form-group">
	    <%= f.label :password, "Password" %>
	    <% if @minimum_password_length %>
	        <em>(<%= @minimum_password_length %> caracteres m√≠nimo)</em>
	    <% end %><br/>
	    <%= f.password_field :password, autocomplete: "off" %>
	</div>
	<div class="actions">
	    <%= f.submit "Sign in" %>
	</div>
<% end %>
